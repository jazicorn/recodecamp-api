{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": ".",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "noEmit": false,
      "types": ["node", "mocha"],
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "noResolve": false,
      "sourceMap": true,
      "allowJs": true,
      "composite": true,
      "jsx": "react"
    },
    "include": ["./src/**/*.ts", "tests/**/*.ts", "./src/**/*.tsx", "tests/**/*.tsx"],
    "exclude":[
        "./node_modules",
        "./docs",
        ".vscode",
        "./src/**/*.js", "tests/**/*.js", "./src/**/*.js.map", "tests/**/*.js.map"
    ]
}
